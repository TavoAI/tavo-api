{
  "name": "tavo-api",
  "version": "0.1.0",
  "description": "Tavo AI SDK Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install",
    "build": "yarn workspaces foreach run build",
    "test": "yarn workspaces foreach run test",
    "test:all": "yarn test",
    "test:integration": "yarn workspaces foreach run test:integration",
    "test:performance": "yarn workspaces foreach run test:performance",
    "codegen": "yarn workspace tools/codegen run codegen",
    "release": "yarn workspace tools/release run release",
    "release:python": "yarn workspace packages/python run release",
    "release:javascript": "yarn workspace packages/javascript run release",
    "release:java": "yarn workspace packages/java run release",
    "release:go": "yarn workspace packages/go run release",
    "lint": "yarn workspaces foreach run lint",
    "format": "yarn workspaces foreach run format",
    "clean": "yarn workspaces foreach run clean",
    "mock:start": "yarn workspace tools/testing run start",
    "docs:build": "yarn workspace docs run build",
    "docs:serve": "yarn workspace docs run serve"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^24.6.0",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TavoAI/tavo-api.git"
  },
  "author": "Tavo AI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TavoAI/tavo-api/issues"
  },
  "homepage": "https://github.com/TavoAI/tavo-api#readme",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,markdown}": [
      "markdownlint --fix"
    ],
    "*.{py}": [
      "black",
      "isort"
    ]
  }
}